<form asp-action="SigInSignOut">
    <input asp-for="signUp_model.Name" type="text" placeholder="Name" autocomplete="off"><br>
    <span asp-validation-for="signUp_model.Name" class="text-danger"></span>

    <input asp-for="signUp_model.Email" type="email" placeholder="Email" autocomplete="off"><br>
    <span asp-validation-for="signUp_model.Email" class="text-danger"></span>

    <input asp-for="signUp_model.Password" type="password" placeholder="Password" autocomplete="off"><br>
    <span asp-validation-for="signUp_model.Password" class="text-danger"></span>

    <input asp-for="signUp_model.ConPassword" type="password" placeholder="Confurm Password" autocomplete="off"><br>
    <span asp-validation-for="signUp_model.ConPassword" class="text-danger"></span>

    <input class="submit-btn" type="submit" value="Sign Up">

