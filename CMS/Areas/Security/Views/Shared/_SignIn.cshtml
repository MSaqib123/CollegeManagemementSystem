<p>or use your email account:</p>

<form asp-action="SigInSignOut">
    <input type="hidden" asp-for="signIn_model.ReturnUrl" />

    <input asp-for="signIn_model.Email" type="email" placeholder="Email" autocomplete="off"><br>
    <span asp-validation-for="signIn_model.Email" class="text-danger"></span>

    <input asp-for="signIn_model.Password" type="password" placeholder="Password" autocomplete="off"><br>
    <span asp-validation-for="signIn_model.Password" class="text-danger"></span>

    <div class="d-block py-3">
        <span asp-for="">
            <input asp-for="signIn_model.isRemember" type="checkbox" class="form-check" /> Remember Me
        </span>
        <span asp-validation-for="signIn_model.isRemember" class="text-danger"></span>
    </div>


    <input class="submit-btn" type="submit" value="Sign In">
 </form>