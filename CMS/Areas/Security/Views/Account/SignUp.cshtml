@model signupModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - CSS Only Slide Login/Registration</title>
</head>
<body>
    <div id="container">

        <!-- Cover Box -->
        <div id="cover">
            <!-- Sign Up Section -->
            <h1 class="sign-up">Hello, Friend!</h1>
            <p class="sign-up">Enter your personal details<br> and start a journey with us</p>
            <a class="button sign-up" href="#cover">Sign In</a>
            <!-- Sign In Section -->
            <h1 class="sign-in">Welcome Back!</h1>
            <p class="sign-in">To keep connected with us please<br> login with your personal info</p>
            <br>
            <a class="button sub sign-in" href="#">Sign Up</a>

            @*__________ Error _____________*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>



        <div id="register">
            <h1>Sign In</h1>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/59/59439.png"></a>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/49/49026.png"></a>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/34/34227.png"></a>
            <p>or use your email account:</p>
            <form>
                <input type="email" placeholder="Email" autocomplete="off"><br>
                <input type="password" placeholder="Password" autocomplete="off"><br>

                <a id="forgot-pass" href="#">Forgot your password?</a><br>
                <input class="submit-btn" type="submit" value="Sign In">
                <div class="container">

                    @if (ViewBag.email == "Email Aready Exist")
                    {
                        <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div" style="height:55px">
                            <div class="py-3">
                                @ViewBag.email
                            </div>
                        </div>
                    }
                    @if (ViewBag.email == "Match")
                    {
                        <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div" style="height:55px">
                            <div asp-validation-summary="ModelOnly" class="text-danger py-3"></div>
                        </div>
                    }

                </div>
            </form>
        </div>

        <!---------------------------- ____________  SingUp Box ______________ ---------------------->
        <div id="login">
            <h1>Create Account</h1>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/59/59439.png"></a>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/49/49026.png"></a>
            <a href="#"><img class="social-login" src="https://image.flaticon.com/icons/png/128/34/34227.png"></a>
            <p>or use your email for registration:</p>

            <form asp-action="SignUp">
                <input asp-for="Name" type="text" placeholder="Name" autocomplete="off"><br>
                <span asp-validation-for="Name" class="text-danger"></span>

                <input asp-for="Email" type="email" placeholder="Email" autocomplete="off"><br>
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" type="password" placeholder="Password" autocomplete="off"><br>
                <span asp-validation-for="Password" class="text-danger"></span>

                <input asp-for="ConPassword" type="password" placeholder="Confurm Password" autocomplete="off"><br>
                <span asp-validation-for="ConPassword" class="text-danger"></span>

                <input class="submit-btn" type="submit" value="Sign Up">

                @if (ViewBag.email == "Email Aready Exist")
                {
                    <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div" style="height:55px">
                        <div class="py-3">
                            @ViewBag.email
                        </div>
                    </div>
                }
                @if (ViewBag.email == "Match")
                {
                    <div class="row alert alert-danger position-relative py-0 border-0 overflow-hidden" id="div" style="height:55px">
                        <div asp-validation-summary="ModelOnly" class="text-danger py-3"></div>
                    </div>
                }
            </form>
        </div>
    
        
    </div> <!-- END Container -->
    <!-- partial -->
</body>
</html>
