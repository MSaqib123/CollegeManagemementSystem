@model IEnumerable<TblSubjects>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="d-flex justify-content-between mt-2 mb-2">
                <h4>Specilize Subjects</h4>
                <div>
                    <a asp-action="Create" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />


<div class="row g-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="table-responsive">

                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Course
                            </th>
                            <th>
                                Year
                            </th>
                            <th>
                                SS class wise
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((x,i)=> new {Data=x,Index=i+1}))
                        {
                            <tr>
                                <td>
                                    @item.Index
                                </td>

                                <td>
                                    @item.Data.Subject
                                </td>

                                <td>
                                    @item.Data.Course.Course
                                </td>

                                <td>
                                    @item.Data.Y.Year
                                </td>

                                <td>
                                    @item.Data.SsCourse.SsName
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Data.SubId" class="btn "><i class="fa fa-edit"></i></a> |
                                    <a asp-action="delete" asp-route-id="@item.Data.SubId" class="btn  " onclick="return confirm('Are sure wants to delete?');"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
