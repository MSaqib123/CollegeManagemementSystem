@model TblSpecializesubject

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="d-flex justify-content-start align-content-center mt-2 mb-2">
                <h4>Create Specialize Category</h4>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@*_______________ Form ______________*@
<div class="row g-4">

    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="SsName" type="text" class="form-control" id="floatingCourse"
                           placeholder="Enter Departmenet">
                    <label for="floatingCourse">Course</label>
                    <span asp-validation-for="SsName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @*_______________ Images ______________*@
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="form-group">
                @*<label>Main Image of Facility</label>*@
                <div class="container mt-3">
                    @*<img class="img-fluid" id="facilityPreview" />*@
                </div>
            </div>
        </div>
    </div>
</div>


<br />

<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>


<script>
    var imgInp = document.getElementById("formFile");
    var preview = document.getElementById("facilityPreview");

    imgInp.onchange = evt => {
        const [file] = imgInp.files;
        if (file) {

            preview.src = URL.createObjectURL(file)
        }
    }
</script>