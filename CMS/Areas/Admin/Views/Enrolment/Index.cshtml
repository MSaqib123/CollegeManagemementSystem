@model IEnumerable<TblEnrolement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="d-flex justify-content-between mt-2 mb-2">
                <h4>Course</h4>
                <div>
                    <a asp-action="Create" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />


<div class="row g-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>sdf</th>
                            <th>
                                course
                            </th>
                            <th>
                                Interducse Date
                            </th>
                            <th>
                                
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                        {
                            <tr>
                                <td>
                                    @item.Index
                                </td>
                                <td>
                                    @item.Data.EnrId
                                </td>
                                <td>
                                    @item.Data.Stu.StuName
                                </td>
                                <td>
                                    @if (item.Data.Stu.Course != null)
                                    {
                                        @item.Data.Stu.Course.Course
                                    }
                                </td>
                                <td>
                                    @item.Data.Specializesubject.SsName
                                </td>
                                <td>
                                    @item.Data.Optionalsubject.OptinalSubject
                                </td>
                                @*<td>
            <a asp-action="Edit" asp-route-id="@item.Data.CId" class="btn "><i class="fa fa-edit"></i></a> |
            <a asp-action="delete" asp-route-id="@item.Data.CId" class="btn  " onclick="return confirm('Are sure wants to delete?');"><i class="fa fa-trash"></i></a>
        </td>*@
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

