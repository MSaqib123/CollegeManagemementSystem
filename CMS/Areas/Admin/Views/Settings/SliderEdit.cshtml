@model TblSlider

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="d-flex justify-content-start align-content-center mt-2 mb-2">
                <h4>Create Slider</h4>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@*_______________ Form ______________*@
<div class="row g-4">
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <form asp-action="SliderEdit" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="SId" hidden/>
                <input asp-for="sliderImage" hidden/>

                <div class="form-floating mb-3">
                    <input asp-for="Title" type="text" class="form-control" id="floatingCourse"
                           placeholder="Enter Departmenet">
                    <label for="floatingCourse">Slider Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="SubTitle" type="text" class="form-control" id="floatingCourse"
                           placeholder="Enter Departmenet">
                    <label for="floatingCourse">Slider SubTitle</label>
                    <span asp-validation-for="SubTitle" class="text-danger"></span>
                </div>



                <div class="form-floating mb-3">
                    <textarea asp-for="details" class="form-control" placeholder="Leave a comment here"
                              id="floatingTextarea" style="height: 150px;"></textarea>
                    <label for="floatingTextarea">Details</label>
                </div>


                @*_____ Main Image ______*@
                <div class="mb-3">
                    <label for="formFile" class="form-label">Select Slider Image</label>
                    <input asp-for="BrowsImage" class="form-control bg-dark" type="file" id="formFile">
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    @*_______________ Images ______________*@
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="form-group">
                <label>Image of Slider</label>
                <div class="container mt-3">
                    @if (Model.sliderImage != "")
                    {
                        <img src="~/@Model.sliderImage" class="img-fluid" id="facilityPreview" />
                    }
                    else
                    {
                        <img src="~/Template/img/no-image-icon-23492.png" class="img-fluid" id="facilityPreview" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>




<script>
    var imgInp = document.getElementById("formFile");
    var preview = document.getElementById("facilityPreview");

    imgInp.onchange = evt => {
        const [file] = imgInp.files;
        if (file) {

            preview.src = URL.createObjectURL(file)
        }
    }
</script>