@model CMS.Data.ViewModel.VMEditRole

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="d-flex justify-content-start align-content-center mt-2 mb-2">
                <h4>Edit Roles</h4>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@*_______________ Form ______________*@
<div class="row g-4">

    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input hidden asp-for="Id" name="name" ?>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingCourse" asp-for="RoleName"
                           placeholder="Enter Role">
                    <label for="floatingCourse">Role Name</label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
                <br />
                @*<div class="form-group">
                    <span asp-validation-for="All" class="text-danger" ></span>
                </div>*@
            </form>
        </div>
    </div>


    @*_______________ Images ______________*@
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="form-group">
                @*<label>Main Image of Facility</label>*@
                <div class="container mt-3">
                    @*<img class="img-fluid" id="facilityPreview" />*@
                </div>
            </div>
        </div>
    </div>

</div>

<br />

<div class="row g-4" style="height:100px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>
