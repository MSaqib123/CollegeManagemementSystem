@model TblSlider

        <!-- Header Start -->
        <div class="container-fluid bg-primary py-5 mb-5 page-header" style="background: linear-gradient(rgba(24, 29, 56, .7), rgba(24, 29, 56, .7)), url('../../@Model.sliderImage');">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10 text-center">
                        <h1 class="display-3 text-white animated slideInDown">@ViewData["Title"]</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a class="text-white" asp-action="Index" asp-controller="Home">@ViewData["BC_1"]</a></li>
                                @if (ViewData["BC_2"].ToString() != "")
                                {
                                    <li class="breadcrumb-item"><a class="text-white" asp-action="@ViewData["BC_2_Index"]" asp-controller="@ViewData["BC_2_Controller"]">@ViewData["BC_2"]</a></li>
                                    @if (ViewData["BC_3"].ToString() != "")
                                    {
                                        <li class="breadcrumb-item"><a class="text-white" asp-action="@ViewData["BC_3_Index"]" asp-controller="@ViewData["BC_3_Controller"]">@ViewData["BC_3"]</a></li>
                                    }
                                }

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>



<!-- Header End -->