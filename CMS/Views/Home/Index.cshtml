<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Instructors</h6>
            <h1 class="mb-5">Expert Instructors</h1>
        </div>
        <div class="row g-4">

            @foreach (var item in Model.TblTeacher_List.ToList().Select((x, i) => new { Data = x, Index = i + 1 }))
            {
                if (item.Index >= 1 && item.Index <= 3) 
                { 
                    <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="team-item bg-light">
                            <div class="overflow-hidden">
                                <img class="img-fluid" src="~/@item.Data.FacImage" alt="" style="width:100%;height:280px">
                            </div>
                            <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                                <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                    <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                                    <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-twitter"></i></a>
                                    <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-instagram"></i></a>
                                </div>
                            </div>
                            <div class="text-center p-4">
                                <h5 class="mb-0">@item.Data.Name</h5>
                                <small>Designation : @item.Data.Dep.Departement</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<!-- Team End -->



<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Testimonial</h6>
            <h1 class="mb-5">Our Students Say!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">
            @foreach (var item in Model.tblStudent_List.ToList().Select((x, i) => new { Data = x, Index = i + 1 }))
            {
                if (item.Index >= 1 && item.Index<=5) { 
                    <div class="testimonial-item text-center">
                    <img class="border rounded-circle p-2 mx-auto mb-3" src="~/@item.Data.StuImage" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">@item.Data.StuName</h5>
                        @if(item.Data.Course != null)
                        {
                            <p>@item.Data.Course.Course</p>
                        }
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">@item.Data.StuDateofBirth</p>
                    </div>
                </div>

                }
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->